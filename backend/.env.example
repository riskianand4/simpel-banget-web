# Environment Configuration
NODE_ENV=development

# Database - REQUIRED
MONGODB_URI=mongodb://localhost:27017/inventory_system

# JWT Configuration - CRITICAL: Generate a secure secret key!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long-please-generate-a-proper-one
JWT_EXPIRE=7d

# Password Security
BCRYPT_ROUNDS=12

# Server Configuration
PORT=3001

# CORS Configuration - CRITICAL: Set specific domains in production!
# Development: http://localhost:8080,http://localhost:3000
# Production: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGIN=http://localhost:8080,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# External API Configuration (if needed)
EXTERNAL_API_URL=
EXTERNAL_API_KEY=


# Email Configuration (if needed)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Session Configuration
SESSION_SECRET=your-session-secret-key-also-needs-to-be-secure

# Redis Configuration (if using Redis for caching/sessions)
REDIS_URL=redis://localhost:6379

# Health Check
HEALTH_CHECK_ENABLED=true

# Database Connection Pool
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=5

# Analytics (if enabled)
GOOGLE_ANALYTICS_ID=
ENABLE_ANALYTICS=false

# Error Reporting (if using external service)
SENTRY_DSN=
ERROR_REPORTING_ENABLED=false